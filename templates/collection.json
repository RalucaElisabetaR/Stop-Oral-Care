{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        "div {background-color: #05294f;}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": true,
        "color_scheme": "inverse"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        ".card {background-color: white; border: none; box-shadow: -2px 8px 24px -18px rgba(0, 0, 0, 0.33);}"
      ],
      "settings": {
        "products_per_page": 16,
        "columns_desktop": 3,
        "image_ratio": "adapt",
        "image_shape": "blob",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "enable_quick_add": true,
        "enable_filtering": false,
        "filter_type": "horizontal",
        "enable_sorting": false,
        "columns_mobile": "1",
        "padding_top": 100,
        "padding_bottom": 100
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
